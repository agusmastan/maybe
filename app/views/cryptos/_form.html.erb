<%# app/views/cryptos/_form.html.erb %>
<% if @error_message.present? %>
  <%= render DS::Alert.new(message: @error_message, variant: :error) %>
<% end %>

<%= styled_form_with model: nil, url: url, scope: :crypto, data: { turbo: false }, class: "flex flex-col gap-4 justify-between grow text-primary" do |form| %>
  <%= form.hidden_field :return_to, value: params[:return_to] %>

  <%= form.text_field :symbol,
                      label: "SÃ­mbolo (ej: BTC, ETH)",
                      placeholder: "BTC",
                      required: true %>

  <%= form.number_field :quantity,
                        label: "Cantidad",
                        placeholder: "0.5",
                        step: :any,
                        min: 0,
                        required: true %>

  <%= form.submit "Crear cuenta de criptomoneda" %>
<% end %>

